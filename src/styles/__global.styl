@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap');

@font-face {font-family: "Circular Std Black";
  src: url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.eot"); /* IE9*/
  src: url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.eot?#iefix") format("embedded-opentype"), /* IE6-IE8 */
  url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.woff2") format("woff2"), /* chrome、firefox */
  url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.woff") format("woff"), /* chrome、firefox */
  url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.ttf") format("truetype"), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url("../fonts/CircularStdBlack/f1a22f6f15d272c7aa56da8b2c91f5e5.svg#Circular Std Black") format("svg"); /* iOS 4.1- */
}
@font-face {font-family: "Circular Std Book";
  src: url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.eot"); /* IE9*/
  src: url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.eot?#iefix") format("embedded-opentype"), /* IE6-IE8 */
  url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.woff2") format("woff2"), /* chrome、firefox */
  url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.woff") format("woff"), /* chrome、firefox */
  url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.ttf") format("truetype"), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url("../fonts/CircularStdBook/860c3ec7bbc5da3e97233ccecafe512e.svg#Circular Std Book") format("svg"); /* iOS 4.1- */
}
//<----------------- Variables---------------->
$primaryFont = 'Circular Std Black'
$secondaryFont ='Prompt'
$specialFont = 'Oswald'
$textFont = 'Circular Std Book'
$primaryColor = #E5E4C0
$secondaryColor = #96946E
$lightColor = #EFEFEF
$darkColor = #171717

$text-content = #848484
$navbarHeight = 60px

mobileWidth = 320px
mobilePotraitWidth = 636px
tabletWidth = 720px
tabletPotraitWidth = 840px
deskWidth = 1000px

mqMobile = "only screen and (min-width: " + mobileWidth + ")"
mqTablet     = "only screen and (min-width: " + tabletWidth + ")"
mqDesk     = "only screen and (min-width: " + deskWidth + ")"
mqTabletPotrait = "only screen and (min-width: " + tabletPotraitWidth + ")"
mqMobilePotrait = "only screen and (max-width: " + mobilePotraitWidth + ")"


//<----------------- Mixins---------------->
TextContent()
  color: $text-content
  font-size: 18px
  font-weight: 400

SubTitle($color)
  margin-bottom: 1em
  font-size: 28px
  font-family: $primaryFont
  if $color == '1'
    color: $primaryColor
  if $color == '2'
    color: $darkColor

PageMargin()
  padding: 0 15px

SectionMargin()
  padding-top: $navbarHeight


Title($color)
  margin-bottom: 1em
  text-align: center
  font-size: 10vw
  @media mqTablet
    font-size: 5vw
  font-family: $secondaryFont
  if $color == '1'
    color: $primaryColor
  if $color == '2'
    color: $darkColor

ExpandOut()
  animation: expandOut 0.3s forwards
//<----------------- Utils---------------->
.expandHeight
    animation: expandHeight 1s forwards
    clip-path: inset(100% 0px)
    opacity: 0

.slideInFromLeft
  animation: slideInFromLeft 1s ease

.slideInFromTop
  animation: slideInFromLeft 1s ease

.fadeOut
  transform: translateY(-50px)
  opacity: 0
.fix-section
  position: fixed;
  top: 0
  bottom: 0
  left: 0
  right: 0
@keyframes expandHeight{
  to{
    clip-path: inset(0px 0px)
    opacity: 100
  }
}

@keyframes slideInFromLeft {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(0);
  }
}
@keyframes slideInFromTop {
  0% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(0);
  }
}
@keyframes expandOut {
  100% {
    transform: scale(1.1);
    opacity: 0
  
  }
}
.right-border
  height: auto
  width: 3px
  margin-right: 0.5em
  background-color: $primaryColor


//<----------------- Globals---------------->
html
  scroll-behavior: smooth

body
  margin: 0 auto
  color: $text-content
  background-color: $darkColor
  font-family: $textFont


ul
  display: flex
  list-style: none
  padding: 0
a
  color: $primaryColor
  text-decoration: none
  cursor: pointer
nav
  display: flex;
  justify-content: center;
  width: 100%;
  background-color: $darkColor
  position: fixed;
  z-index: 40;

button
  TextContent()
  font-family: 'Circular Std Book'
  background: none
  outline: none
  padding: 0
  margin: 0
  border: none
  cursor: pointer

.button
  width: 175px
  height: 50px
  border: 4px solid $lightColor
  color: $lightColor
  a
    $lightColor

.section-title
  Title(1)
  &--dark
    color: $darkColor
.section-subtitle
  color: $secondaryColor
  font-weight: 100
  margin: auto 0
  font-size: 5vw
  @media mqTablet
    font-size: 3vw
.subtitle
  SubTitle(1)
  font-weight: 900
  text-align: center;
  &--dark
    color: $darkColor
