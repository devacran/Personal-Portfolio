@import './__global'
@import './components/__carousel'


.navbar
  @media mqTablet
    grid-template-columns: 1fr 2fr 1fr
  display: grid
  grid-template-columns: 1fr 1fr
  height: $navbarHeight
  PageMargin()
  width: 100%;
  background-color: $darkColor
  color: $primaryColor
  box-sizing: border-box
  z-index: 8
  opacity: 0
  transform: translateY(-60px);
  transition: all 0.2s ease-in-out
  ul
    align-items: center
    margin: 0
  &--show
    opacity: 1
    transform: translateY(0px);
  &--side
    @media mqTablet
      display: none
    background-color: $darkColor
    position: fixed
    left: calc(100vw - 100px)
    top: 50px
    z-index: -1
    width: 70px
    height: 100vh
    box-sizing: content-box
    ul
      display: block
      text-align: end;
      margin: 0;
      li
        margin: 1em 0
  &__left
    justify-content: flex-start
    li:last-child
      margin-left: 1em
    img
      width: 40px
  &__right
    justify-content: flex-end
    a:first-child
      display: none
      @media mqTablet
        display: block
        img
          width: 30px
    a:last-child
      @media mqTablet
        display: none
  &__center
    display: none
    justify-content: space-between
    @media mqTablet
      display: flex
    li:last-child
      @media mqTablet
        display: none


.main-section
  PageMargin()
  SectionMargin()
  margin: 0;
  padding: 0 6.944vw 3.333vw;
  background-color: $darkColor
  color: $primaryColor
  height: 100vh
  h2
    text-align: left;

.hero
  SubTitle(1)
  height: "calc(100% - %s)" %($navbarHeight)
  display: flex;
  align-items: center;
  @media mqDesk
    position: fixed;
  p
    margin-top: 0
    margin-bottom: 0.5em
  p:last-child
    TextContent()
    margin-bottom: 0
  h1
    @media mqDesk
      font-size: 10.4vw
    margin: 50px 0
    font-size: 18.7vw
    line-height: 0.7;
    color: #202121;
    font-family: 'Oswald'
  &__container
    transition: all 0.2s ease-in-out
  &__name
    line-height: 1.2em
.miguel
  font-family: $specialFont
  color: $primaryColor
.delarosa
  $specialFont
  color: $primaryColor
  @media mqDesk
    font-size: 10.4vw
  font-size: 18.7vw
  font-weight: 600;

.portfolio
  SectionMargin()
  background-color: $lightColor
  position: relative;
  h1
    font-family: $primaryFont
.project
  width: 100%
  height: 100vh;
  color: $lightColor
  box-sizing: border-box;
  h2
    margin-top: 0
    margin-bottom: 10px
    font-size: 10vw
    text-align: center;
    font-family: $primaryFont
    @media mqTablet
      font-size: 5vw
      text-align: left;
  &__container
    display: grid;
    grid-template-columns: 1fr
    @media mqDesk
      grid-template-columns: 1fr 1fr
    height: 100%;
  &__button
    margin-top: 20px
  &__wrap
    PageMargin()
    max-width: 1080px
    margin: 0 auto
    height: 100%
  &__left-wrap
    display: grid;
    place-items: center;
    @media mqTablet
      display: block
  &__left
    height: 100%
    display: flex;
    align-items: center;
  &__description
    TextContent()
    color: $lightColor
    text-align: center;
    @media mqTablet
      width: 70%
      text-align: left;
  &__right
    display: flex;
    justify-content: center
    height: 100%
  &__logo
    width: 200px
    margin-bottom: 50px
    img
      width: 100%
  &__image
    display: none
    @media mqDesk
      display: block;
    width: 300px
    img
      width: 100%
      height: 100%
.unu
  background-color: #f57569
  position: sticky;
  top: 0;
.dailysun
  z-index: 1;
  position: relative;
  background-image: linear-gradient(45deg,#56cad5,#247ad4)
.skills
  SectionMargin()
  PageMargin()
  position: relative;
  height: "calc(100vh - %s)" %($navbarHeight) //anota esto porque no lo sabia
  min-height: 700px
  margin: 0 auto
  background-color: $darkColor
  border: 1px solid transparent
  text-align: center;
  h2
    color: $text-content
  &__wrap
    max-width: 1080px
    margin: 0 auto
  &__icons
    display: grid
    grid-template-columns: repeat(3, 1fr)
    @media mqTablet
      grid-template-columns: repeat(4, 1fr)
    margin-top: 80px
    text-align: center
    img
      width: 60px
    span
      display: block
      margin: 1em 0


.about-me
  display: grid
  grid-template-columns: 1fr 2fr 50px
  grid-template-rows: 360px
  grid-gap: 0.5em

   // margin-top: $navbarHeight
  height: 100vh
  min-height: 600px
  background-color: $darkColor
  position: relative
  &__photo
    img
      width: 100%
      height: 100%
      object-fit: cover
  &__description
    text-align: right
    padding: 0 10%
  &__text-container
    margin: 1em 1em
    grid-column-start: 1
    grid-column-end: 4
    @media mqTablet
      display: flex
  &__text
    margin-bottom: 2em
    @media mqTablet
      width: 60%
  &__social
    display: flex;
    align-items: center;
    margin: auto;
    text-align: center;
    span
      display: block;
    div:last-child
      margin-left: 1em
  &__title
    position: absolute
    right: 0
    top: 0px
    @media mqTablet
      right: 2vw;
    height: 55px
    Title(1)
    margin: 0
    padding: 0 70px;
    transform-origin: 100% 100%
    transform: rotateZ(-90deg)
.about-me-container
  background-color: $darkColor


.footer
  @media mqTablet
    height: auto
    min-height: initial
    padding-bottom: 1em
    text-align: initial
  position: relative;
  background-color: $lightColor
  height: 100vh
  min-height: 600px
  &__grid
    display: flex
    flex-direction: column
    @media mqTablet
      display: grid
      grid-template-columns: 1fr
      grid-template-columns: 2fr 1fr
      height: 100%
    max-width: 800px
    PageMargin()
    SectionMargin()
    margin: 0 auto
    text-align: center
  &__item-1
    font-size: 10vw
    @media mqTablet
      text-align: left
      font-size: 3.5vw
  &__item-3
    SubTitle(2)
    color: $secondaryColor
    @media mqTablet
      text-align: left
  &__item-2
    TextContent()
    margin: 10vh 0 30vh 0
    span:last-child
      display: block
      margin: 1em
    @media mqTablet
      margin: 0
